<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/listing_view_margins"
    android:layout_marginRight="@dimen/listing_view_margins"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listing_view_element_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#A6A6A6"
            android:padding="1dp">

            <com.google.android.gms.maps.MapView
                android:id="@+id/listing_map_view"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/listing_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>