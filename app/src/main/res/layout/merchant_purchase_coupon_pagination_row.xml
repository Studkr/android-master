<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="10dp">

    <com.INT.apps.GpsspecialDevelopment.views.RoundedImageView
        android:id="@+id/user_avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/placeholder100"
        app:riv_corner_radius="5dp" />

    <TextView
        android:id="@+id/coupon_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/user_avatar"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="@color/taupe_black"
        android:textStyle="bold"
        tools:text="7h47h30sb42" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_avatar"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/user_avatar"
        android:layout_toLeftOf="@id/coupon_code"
        android:layout_toRightOf="@id/user_avatar"
        android:layout_toStartOf="@id/coupon_code"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textColor="@color/taupe_black"
        android:textStyle="bold"
        tools:text="Henry Day" />

    <TextView
        android:id="@+id/purchased_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/user_avatar"
        android:layout_toRightOf="@id/user_avatar"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textColor="@color/dark_grey"
        android:textSize="12sp"
        tools:text="16 Jan 2017" />

</RelativeLayout>