<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_view_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.INT.apps.GpsspecialDevelopment.fragments.reviews.ReviewListFragment">

    <ListView
        android:id="@+id/review_list"
        style="@style/list_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:footerDividersEnabled="true" />

    <ProgressBar
        android:id="@+id/loading_review"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:visibility="gone" />

    <include layout="@layout/loading_problem_layout" />
</FrameLayout>
